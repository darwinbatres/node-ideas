<h3 class="text-center">All my ideas</h3>

<div id="accordion" role="tablist">
  {{#each Ideas}}
  <div class="card mb-1">
    <div class="card-header" role="tab" id="heading-{{id}}">
      <h5 class="mb-0">
        <a data-toggle="collapse" href="#{{id}}" aria-expanded="true"  aria-controls="{{id}}">
          {{title}}
        </a>
      </h5>
    </div>
    <div id="{{id}}" class="collapse" role="tabpanel" aria-labelledby="heading-{{id}}" data-parent="#accordion">
      <div class="card-body">
        {{details}}
      </div>
    </div>
  </div>
  {{else}}
  <h2>There are no Ideas created... Create one now!</h2>
  {{/each}}
</div>
